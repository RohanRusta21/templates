        "startup": {
          "description": "Startup probe configuration",
          "type": "object",
          "properties": {
            "path": {
              "description": "HTTP path for probe",
              "type": "string"
            },
            "initialDelaySeconds": {
              "description": "Initial delay for probe",
              "type": "integer"
            },
            "periodSeconds": {
              "description": "Period for probe",
              "type": "integer"
            },
            "failureThreshold": {
